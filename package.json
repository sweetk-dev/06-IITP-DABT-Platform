{
  "name": "iitp-dabt-platform",
  "version": "1.0.0",
  "description": "IITP 장애인 데이터 플랫폼",
  "main": "index.js",
  "scripts": {
    "build:common": "node script/local/build-common.js",
    "build:fe": "node script/local/build-fe.js",
    "build:be": "node script/local/build-be.js",
    "build:all": "node script/local/build-all.js",
    "dev:fe": "node script/local/run-fe.js",
    "dev:be": "node script/local/run-be.js",
    "dev:all": "node script/local/run-all.js",
    "install:all": "npm install",
    "clean:all": "npm run clean --workspaces",
    "build:common:watch": "cd packages/common && npm run dev",
    "build:server": "node script/server/build-server.js",
    "build:server:common": "node script/server/build-server-common.js",
    "build:server:be": "node script/server/build-server-be.js",
    "build:server:fe": "node script/server/build-server-fe.js",
    "deploy:server": "node script/server/deploy-server.js",
    "deploy:server:ops": "node script/server/deploy-server-ops.js",
    "start:server:be": "node script/server/start-server-be.js",
    "restart:server:be": "node script/server/restart-server-be.js",
    "stop:server:be": "node script/server/stop-server-be.js"
  },
  "workspaces": [
    "packages/common",
    "fe",
    "be"
  ],
  "devDependencies": {
    "typescript": "^5.4.0",
    "rimraf": "^5.0.0"
  }
}
